<h1>Update Pet</h1>
 
<h2>Edits for <%= @pet.name %></h2>
 
  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
 
    <br>
    <p>Select an existing owner or create a new one below.</p>
 
 
    <h3>Existing Owners</h3>
    <% @owners.each do |owner| %>
        <% if @pet.owner_id == owner.id %>
            <input id="<%= owner.id %>" name="pet[owner_id]" type="radio" value="<%= owner.id %>" checked="checked">

        <% else %>
            <input id="<%= owner.id %>" name="pet[owner_id]" type="radio" value="<%= owner.id %>">
    
        <br>
        <% end %>
    <% end %>
    <br>
 
    <h3>New Owner</h3>
    <label>Pet Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <br><br>
 
    <input type="submit" value="Update Pet">
  </form>




